<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система учёта товаров" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель навигации -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGray" Height="40">
            <Button x:Name="BtnProducts" Content="Товары" Margin="10,5" Padding="10,2" Click="BtnProducts_Click"/>
            <Button x:Name="BtnStatistics" Content="Статистика" Margin="10,5" Padding="10,2" Click="BtnStatistics_Click"/>
            <Button x:Name="BtnSearch" Content="Поиск" Margin="10,5" Padding="10,2" Click="BtnSearch_Click"/>
        </StackPanel>

        <!-- Контейнер для модулей -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
