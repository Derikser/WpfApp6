<Page x:Class="WpfApp6.StatisticsPage"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Статистика">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="TxtTotalProducts" FontSize="14" Margin="0,0,0,10"/>
            <TextBlock x:Name="TxtTotalValue" FontSize="14" Margin="0,0,0,10"/>
            <TextBlock x:Name="TxtAveragePrice" FontSize="14" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Page>